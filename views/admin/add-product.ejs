<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class='user-message user-message--error'><%= errorMessage %></div>
        <% } %>
        <form class="product-form" action="/admin/add-product" method="POST">
            <!-- CSRF -->
            <input type="hidden" name='_csrf' value="<%= csrfToken %>">

            <!-- Title -->
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                    class='<%= validationError === 'title' ? 'invalid': '' %>' 
                    type="text" 
                    name="title" 
                    id="title"
                    value='<%= oldInput.title %>'
                >
            </div>

            <!-- Image Url -->
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input 
                    class='<%= validationError === 'imageUrl' ? 'invalid': '' %>' 
                    type="text" 
                    name="imageUrl"
                    id="imageUrl" 
                    value='<%= oldInput.imageUrl %>'
                >
            </div>

            <!-- Price -->
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                    class='<%= validationError === 'price' ? 'invalid': '' %>' 
                    type="number" 
                    name="price" 
                    id="price"
                    step="0.01" 
                    value='<%= oldInput.price %>'
                >
            </div>

            <!-- Description -->
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                    class='<%= validationError === 'description' ? 'invalid': '' %>' 
                    name="description"
                    id="description" 
                    rows="5"
                >
                <%= oldInput.description %> 
                </textarea>
            </div>

            <!-- Button -->
            <button class="btn" type="submit">Add Product</button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>